@model NewsBlog.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";

    string imageUrl = "";
    if(Model.ImageUrl == "")
    {
        imageUrl = "/MainPage/assets/img/home-bg.jpg";
    }
    else
    {
        imageUrl = "/images/" + Model.ImageUrl;
    }
}

<!-- Page Header-->
<div class="container-fluid">
    <!-- Change to container-fluid -->
    <header class="my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Removed the inline style for width and max-width -->
                <div class="image-container">
                    <img src='@imageUrl' alt="Description" style="width: 100%; height: 300px; display: block; object-fit: cover;">
                </div>
                <div class="text-center mt-5">
                    <h1>@Model.Title</h1>
                    <span class="subheading">@Model.Description</span>
                </div>
            </div>
        </div>
    </header>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            @foreach(var post in Model.Posts!)
            {
                <!-- Post preview-->
                <div class="post-preview mb-5">
                    <a href="post.html">
                        <h2 class="post-title">@post.Title</h2>
                        <h3 class="post-subtitle">@post.Summary</h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="#!">@post.User!.FirstName @post.User.LastName</a>
                        on @post.CreatedAt.ToString("MMMM dd, yyyy HH:mm")
                    </p>
                </div>
                <hr class="my-4" />
                
            }

            <!-- Pager-->
            <div class="d-flex justify-content-end mb-4">
                <a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a>
            </div>
        </div>
    </div>
</div>
